#include <stdio.h>
#include <math.h>

int main() {
    int f, r;
    float e;

    printf("Введіть f: ");
    scanf("%d", &f);
    printf("Введіть r: ");
    scanf("%d", &r);

    // Перевірка для f == 5
    if (f == 5) {
        e = 3 * f + 2 * r;
        printf("e = %.2f\n", e);
        return 0; // Завершуємо програму
    }

    // Перевірка для f == 0
    if (f == 0) {
        if (r >= 0) { // Перевірка, щоб уникнути ділення на нуль
            e = sqrt(8 * r) / (2 * f - 4);
            printf("e = %.2f\n", e);
            return 0; // Завершуємо програму
        }
        printf("Помилка: r повинно бути невід'ємним для обчислення кореня.\n");
        return 1; // Завершуємо програму з помилкою
    }

    // Перевірка для f == -5
    if (f == -5) {
        e = f * r - 9;
        printf("e = %.2f\n", e);
        return 0; // Завершуємо програму
    }

    // Якщо жодна з умов не виконалася, виводимо повідомлення про помилку
    printf("Помилка: некоректне значення f.\n");
    return 1; // Завершуємо програму з помилкою
}
