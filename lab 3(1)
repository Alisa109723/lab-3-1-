#include <stdio.h>
#include <math.h>

int main() {
    int f, r;
    float e;

    printf("Введіть f: ");
    scanf("%d", &f);
    printf("Введіть r: ");
    scanf("%d", &r);

    if (f == 5) {
        e = 3 * f + 2 * r;
    } else if (f == 0) {
        if (r >= 0) { // Перевірка, щоб уникнути ділення на нуль
            e = sqrt(8 * r) / (2 * f - 4);
        } else {
            printf("Помилка: r повинно бути невід'ємним для обчислення кореня.\n");
            return 1;
        }
    } else if (f == -5) {
        e = f * r - 9;
    } else {
        // Обробка випадків, коли f не є одним з очікуваних значень
        printf("Помилка: некоректне значення f.\n");
        return 1; // Завершує програму з помилкою
    }

    printf("e = %.2f\n", e);

    return 0;
}
